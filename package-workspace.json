{
  "name": "ga-quiz-monorepo",
  "version": "1.0.0",
  "description": "GA Quiz - Sistema de Gamificação Educacional - Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "deploy:backend": "cd packages/backend && npm run deploy",
    "deploy:frontend": "cd packages/frontend && npm run deploy",
    "deploy:all": "npm run deploy:backend && npm run deploy:frontend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

